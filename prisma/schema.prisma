generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String?
  username  String?   
  posts     Post[]
  shares    Share[]
  following Follow[]  @relation("UserFollowing")
  followers Follow[]  @relation("UserFollowers")
  createdAt DateTime?  @default(now())
}

model Post {
  id               Int       @id @default(autoincrement())
  content          String?   @db.Text()
  published        DateTime? @default(now())    
  authorId         Int
  author           User      @relation(fields: [authorId], references: [id])
  originalShares   Share[]   @relation("PostOriginal") // compartilhamentos deste post como o post original
  sharedPosts      Share[]   @relation("NewPostOriginal") // vezes que este post é o novo post em um compartilhamento

  @@index([authorId])
}

model Share {
  id          Int       @id @default(autoincrement())
  postId      Int
  userId      Int
  content     String?   @db.Text()
  shareType   ShareType
  originalPost Post     @relation(name: "PostOriginal", fields: [postId], references: [id]) // o post original que está sendo compartilhado
  sharingUser User     @relation(fields: [userId], references: [id])
  newPostId   Int
  sharedPost  Post     @relation(name: "NewPostOriginal", fields: [newPostId], references: [id]) // o novo post criado pelo compartilhamento

  @@unique([postId, userId, newPostId])
  @@index([postId])
  @@index([userId])
  @@index([newPostId])
}

enum ShareType {
  RETWEET
  QUOTE
}
model Follow {
  id              Int     @id @default(autoincrement())
  followerId      Int
  followingId     Int
  follower        User    @relation(name: "UserFollowers", fields: [followerId], references: [id])
  following       User    @relation(name: "UserFollowing", fields: [followingId], references: [id])
  
  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}
